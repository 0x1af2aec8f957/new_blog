<!DOCTYPE html>
<html website="<%= host %>" date="<%= date %>">
<head>
    <% include ../template/head %>
    <style>
        .nav-bar .is-active {
            color: #3273dc !important;
        }

        .nav-bar::before {
            content: "文章分类...";
            transform: scale(.76);
            color: #7a7a7a
        }

        @media screen and (max-width: 1087px) {
            .breadcrumb ol, .breadcrumb ul {
                flex-direction: column;
            }

            .breadcrumb li:before {
                color: #b5b5b5;
                content: "\02022";
            }

            .breadcrumb li:first-child a {
                padding-left: 0.75em;
            }
        }
    </style>
</head>
<body>
<!-- Welcome to <%= host %> -->
<section class="hero is-white is-fullheight transition-all" id="content-m">
    <div class="hero-head">
    <% include ../template/header %>
    </div>
    <div class="hero-body">
        <div class="container">
            <div class="field is-grouped is-grouped-centered">
                <div class="control">
                    <input id="search-input" class="input" type="text" placeholder="Find articles">
                </div>
                <div class="control">
                    <a class="button is-info">
                        Search
                    </a>
                </div>
            </div>
            <div id="content-c">
                <nav class="breadcrumb has-bullet-separator is-small" aria-label="breadcrumbs">
                    <ul class="animated slideInLeft nav-bar">
                        <% nav.forEach(item=>{ %>
                            <li>
                                <a class="<%= type === item ? 'is-active' : '' %>"
                                   href="/article?type=<%= item %>"><%= item %>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </nav>
                <div class="columns">
                    <% articles.forEach(article=>{ %>
                        <div class="column is-one-fifth animated zoomIn">
                            <a href="/article/<%= article.title %>?type=<%= type %>">
                                <div class="card">
                                    <div class="card-image">
                                        <figure class="image is-2by1">
                                            <img src="data:image/jpg;base64,<%= article.cover %>"
                                                 alt="Placeholder image">
                                        </figure>
                                    </div>
                                    <div class="card-content content padding-1rem">
                                        <p class="subtitle is-7"><%= article.title %></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
<script>
  var $s = document.getElementById('search-input'),
      $c = document.getElementById('content-m');
  $s.onfocus = function () {
    $c.classList.add('is-light');
    $c.classList.remove('is-white');
  }
  $s.onblur = function () {
    $c.classList.add('is-white');
    $c.classList.remove('is-light')
  }
</script>
</html>